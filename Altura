import java.util.Scanner;
public class Altura
{
 public static void main (String[]args){
     
     Scanner sc = new Scanner (System.in);
     
     float altura=0, mediaAltura=0;
     int n, baixo=0,medio=0,alto=0;
     
     System.out.println("Entre com a quantidade de alunos: ");
     n = sc.nextInt();
     
     for (int i=1;i<n+1;i++){
         
         System.out.println("Entre com a altura do "+i+"º aluno: ");
         altura = sc.nextFloat();
         
         mediaAltura = mediaAltura+altura;
              
        if (altura < 1.50){
        
            baixo = baixo+1;
    }
        else if((altura > 1.50) && (altura < 1.80)){
        medio = medio+1;
    }
        
        else if(altura > 1.80){
        alto = alto +1;
    }
}
    
        mediaAltura = mediaAltura/n;
    
        System.out.println("Alunos baixos: "+baixo);
        System.out.println("Alunos médios: "+medio);
        System.out.println("Alunos altos: "+alto);
        System.out.println("Média de altura: "+mediaAltura);
     
    }
}
